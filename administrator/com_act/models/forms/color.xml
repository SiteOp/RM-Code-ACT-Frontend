<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="color" maxlength="20" filter="string" type="text" required="true" label="COM_ACT_FORM_LBL_COLOR_COLOR" description="COM_ACT_FORM_DESC_COLOR_COLOR" hint="COM_ACT_FORM_LBL_COLOR_COLOR"/>
    <field name="rgbcode" default="#ffffff" type="color" required="true" label="COM_ACT_FORM_LBL_COLOR_RGBCODE" description="COM_ACT_FORM_DESC_COLOR_RGBCODE" hint="COM_ACT_FORM_LBL_COLOR_RGBCODE"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="ordering"/>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_ACT_FORM_LBL_COLOR_CREATED_BY" description="COM_ACT_FORM_DESC_COLOR_CREATED_BY" hidden="true" hint="COM_ACT_FORM_LBL_COLOR_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_ACT_FORM_LBL_COLOR_MODIFIED_BY" description="COM_ACT_FORM_DESC_COLOR_MODIFIED_BY" hidden="true" hint="COM_ACT_FORM_LBL_COLOR_MODIFIED_BY"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
