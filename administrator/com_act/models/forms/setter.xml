<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="category" extension="com_act.setters" multiple="true" type="category" label="COM_ACT_FORM_LBL_SETTER_CATEGORY" description="COM_ACT_FORM_DESC_SETTER_CATEGORY" hint="COM_ACT_FORM_LBL_SETTER_CATEGORY"/>
    <field name="lastname" filter="safehtml" type="text" required="true" label="COM_ACT_FORM_LBL_SETTER_LASTNAME" description="COM_ACT_FORM_DESC_SETTER_LASTNAME" hint="COM_ACT_FORM_LBL_SETTER_LASTNAME"/>
    <field name="firstname" filter="safehtml" type="text" label="COM_ACT_FORM_LBL_SETTER_FIRSTNAME" description="COM_ACT_FORM_DESC_SETTER_FIRSTNAME" hint="COM_ACT_FORM_LBL_SETTER_FIRSTNAME"/>
    <field name="settername" filter="safehtml" type="text" required="true" label="COM_ACT_FORM_LBL_SETTER_SETTERNAME" description="COM_ACT_FORM_DESC_SETTER_SETTERNAME" hint="COM_ACT_FORM_LBL_SETTER_SETTERNAME"/>
    <field name="email" validate="email" type="email" label="COM_ACT_FORM_LBL_SETTER_EMAIL" description="COM_ACT_FORM_DESC_SETTER_EMAIL" hint="COM_ACT_FORM_LBL_SETTER_EMAIL"/>
    <field name="phone" filter="safehtml" type="tel" label="COM_ACT_FORM_LBL_SETTER_PHONE" description="COM_ACT_FORM_DESC_SETTER_PHONE" hint="COM_ACT_FORM_LBL_SETTER_PHONE"/>
    <field name="image" directory="setter" type="media" label="COM_ACT_FORM_LBL_SETTER_IMAGE" description="COM_ACT_FORM_DESC_SETTER_IMAGE" hint="COM_ACT_FORM_LBL_SETTER_IMAGE"/>
    <field name="info" cols="5" rows="5" filter="safehtml" type="textarea" label="COM_ACT_FORM_LBL_SETTER_INFO" description="COM_ACT_FORM_DESC_SETTER_INFO" hint="COM_ACT_FORM_LBL_SETTER_INFO"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_ACT_FORM_LBL_SETTER_CREATED_BY" description="COM_ACT_FORM_DESC_SETTER_CREATED_BY" hidden="true" hint="COM_ACT_FORM_LBL_SETTER_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_ACT_FORM_LBL_SETTER_MODIFIED_BY" description="COM_ACT_FORM_DESC_SETTER_MODIFIED_BY" hidden="true" hint="COM_ACT_FORM_LBL_SETTER_MODIFIED_BY"/>
    <field name="ordering"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
