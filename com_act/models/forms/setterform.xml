<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    
    <field name="id" 
           type="text" 
           readonly="true" 
           class="readonly invisible" 
           default="0" 
    />
    
    <field name="category" 
           extension="com_act.setters" 
           multiple="true" 
           type="category" 
           label="COM_ACT_FORM_LBL_SETTER_CATEGORY" 
           hint="COM_ACT_FORM_LBL_SETTER_CATEGORY"
    />

    <field name="lastname" 
           filter="safehtml" 
           type="text" 
           label="COM_ACT_FORM_LBL_SETTER_LASTNAME" 
           hint="COM_ACT_FORM_LBL_SETTER_LASTNAME"
           class="form-control"
    />
     
    <field name="firstname" 
           filter="safehtml" 
           type="text" 
           label="COM_ACT_FORM_LBL_SETTER_FIRSTNAME" 
           hint="COM_ACT_FORM_LBL_SETTER_FIRSTNAME"
           class="form-control"
     />
     
    <field name="settername" 
           filter="safehtml" 
           type="text" 
           required="true" 
           label="COM_ACT_FORM_LBL_SETTER_SETTERNAME"
           hint="COM_ACT_FORM_LBL_SETTER_SETTERNAME"
           class="form-control"
    />
    
    <field name="email" 
           validate="email" 
           type="email" 
           label="COM_ACT_FORM_LBL_SETTER_EMAIL" 
           hint="COM_ACT_FORM_LBL_SETTER_EMAIL"
           class="form-control"
    />
    
    <field name="phone" 
           filter="safehtml" 
           type="tel" 
           label="COM_ACT_FORM_LBL_SETTER_PHONE" 
           hint="COM_ACT_FORM_LBL_SETTER_PHONE"
           class="form-control"
    />
    
    <field name="image" 
           directory="setter" 
           type="media" 
           label="COM_ACT_FORM_LBL_SETTER_IMAGE" 
           hint="COM_ACT_FORM_LBL_SETTER_IMAGE"
           class="form-control"
    />
    <field name="info" 
           filter="safehtml" 
           type="textarea" 
           label="COM_ACT_FORM_LBL_SETTER_INFO" 
           hint="COM_ACT_FORM_LBL_SETTER_INFO"
           class="form-control"
    />
    
    <field name="state" 
           default="1" 
           type="list" 
           label="JSTATUS" 
           class="inputbox" 
           size="1"
           >
              <option value="1">JPUBLISHED</option>
              <option value="0">JUNPUBLISHED</option>
              <option value="2">JARCHIVED</option>
              <option value="-2">JTRASHED</option>
    </field>
    
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="ordering"/>
    
  </fieldset>
</form>
