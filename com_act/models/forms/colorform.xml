<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" 
           type="text" 
           readonly="true" 
           class="readonly invisible" 
           default="0" 
     />
     
    <field name="color" 
           maxlength="20" 
           filter="string" 
           type="text" 
           required="true" 
           label="COM_ACT_FORM_LBL_COLOR_COLOR" 
           hint="COM_ACT_FORM_LBL_COLOR_COLOR"
           class="form-control"
     />
     
    <field name="rgbcode" 
           default="#ffffff" 
           type="color"
           label="COM_ACT_FORM_LBL_COLOR_RGBCODE" 
           class="form-control"
    />
    
    <field name="state" 
           default="1" 
           type="list" 
           label="JSTATUS" 
           class="inputbox" 
           size="1"
           >
              <option value="1">JPUBLISHED</option>
              <option value="0">JUNPUBLISHED</option>
              <option value="2">JARCHIVED</option>
              <option value="-2">JTRASHED</option>
    </field>
    
    <field name="ordering"/>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    
  </fieldset>
</form>
