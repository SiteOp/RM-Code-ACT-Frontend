                <option value="1">COM_ACT_SEARCH_FILTER_BUIDLING_1</option>
                <option value="2">COM_ACT_SEARCH_FILTER_BUIDLING_2</option>
       </field>
       <field name="inorout"
              label=""
              type="list"
              filter="integer"
              onchange="this.form.submit();"
              default="COM_ACT_SEARCH_FILTER_INOROUT ">
                <option value="">COM_ACT_SEARCH_FILTER_INOROUT </option>
                <option value="1">COM_ACT_SEARCH_FILTER_INDOOR</option>
