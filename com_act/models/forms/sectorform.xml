<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
       <field name="id" 
              type="text" 
              readonly="true" 
              class="readonly" 
              default="0" 
              description=""
       />
       <field name="state" 
              default="1" 
              type="list"
              filter="integer"
              label="COM_ACT_STATUS" 
              class="inputbox"
              size="1">
                <option value="1">JPUBLISHED</option>
                <option value="0">JUNPUBLISHED</option>
                <option value="-2">JTRASHED</option>
       </field>
       <field name="sector" 
              filter="safehtml" 
              type="text" 
              class="form-control"
              required="true"  
              label="COM_ACT_SECTORS_SECTOR"  
              description="" 
              hint=""
       />
       <field name="building" 
              type="list"
              filter="integer"
              label="COM_ACT_SECTORS_BUILDING">
                <option value="1">COM_ACT_SECTORS_BUILDING_OPTION_1</option>
                <option value="2">COM_ACT_SECTORS_BUILDING_OPTION_2</option>
       </field>
       <field name="inorout" 
              type="list" 
              required="true"
              filter="integer"
              label="COM_ACT_SECTORS_INOROUT" >
